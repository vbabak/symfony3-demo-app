{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div id="welcome">
            <h1>Posts</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Text</th>
                    <th>Action</th>
                </tr>
                {% for item in items %}
                    <tr>
                        <td>{{ item.getId() }}</td>
                        <td>{{ item.getTitle() }}</td>
                        <td>{{ item.getText()|truncate(200) }} ... </td>
                        <td><a class="btn btn-action" href="{{ url('post_create_page', {'id': item.getId()}) }}">Edit</a></td>
                    </tr>
                {% endfor %}
            </table>

            {% include 'pagination.html.twig' %}

        </div>
    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}

